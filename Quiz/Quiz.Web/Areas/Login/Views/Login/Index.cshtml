@model Quiz.Database.ViewModels.LoginVM;
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/StaticFiles/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="~/js/site.js" asp-append-version="true"></script>
@{
    ViewData["Title"] = "Login";
}
@Html.AntiForgeryToken()

<body class="body-login">
    <div class="overlay">
        <form asp-action="Index" asp-controller="Login" enctype="multipart/form-data" class="form-login">
            <div class="con">
                <header class="head-form header-login">
                    <h2>LOGIN</h2>
                    <p>Login here using your email and password</p>
                </header>
                <br>
                <div class="field-set">
                    <div class="row-input">
                        <span class="input-item">
                            <i class="fa fa-user-circle"></i>
                        </span>
                        <input asp-for="Email_User" class="form-input" id="txt-input" type="text" placeholder="Email User" required>
                    </div>
                    <div class="row-input">
                        <span class="input-item">
                            <i class="fa fa-key"></i>
                        </span>
                        <input asp-for="Password" class="form-input" type="password" placeholder="Password" id="pwd"  name="Password" required>
                         <span><i class="fa fa-eye" aria-hidden="true"  type="button" id="eye"></i></span>
                    </div>
                    <div class="row-input">
                        <input asp-for="Password" class="form-input" type="password" placeholder="Password" id="pwd"  name="Password" required>
                         <span><i class="fa fa-eye" aria-hidden="true"  type="button" id="eye"></i></span>
                    </div>
                    <br>
                    <div>
                        <input type="submit" value="Login" class="log-in btn-form-login"/>
                    </div>
                </div>
                <div class="other">
                  <button class="btn submits frgt-pass btn-form-login">Forgot Password</button>
                  <button class="btn submits sign-up btn-form-login">Sign Up 
                  <i class="fa fa-user-plus" aria-hidden="true"></i>
                  </button>
                </div>
            </div>
        </form>
    </div>
</body>
