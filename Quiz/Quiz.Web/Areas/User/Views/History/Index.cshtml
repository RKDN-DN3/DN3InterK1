@model Quiz.Database.ViewModels.ExamHistoryVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/StaticFiles/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}

<div class="form-group">
    <label asp-for="questionbank.Name" class="control-label"></label>
    <input asp-for="questionbank.Name" class="form-control" placeholder="Content"/>
    <span asp-validation-for="questionbank.Name" class="text-danger"></span>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Name of examination</th>
            <th scope="col">Date do exam</th>
            <th scope="col">Mark</th>
            <th scope="col">Time do exam</th>
            <th scope="col">Start time</th>
            <th scope="col">End time</th>
        </tr>
    </thead>
    <tbody>
        @{
            string ContentLimitLength(string a)
            {
                return (a.Length >= 50) ? (a.Substring(0,49)+"...") : a;
            }
            int i = 0;
        @foreach (var item in Model.exam_Histories) {
        <tr style="">
            <td>@(++i)</td>
            <td>@ContentLimitLength(@item.Examination.Name)</td>

            <td>@item.DateDoExam</td>
            <td>@item.Mark</td>
            <td>@item.TimeDoExam</td>
            <td>@item.StartTime</td>
            <td>@item.EndTime</td>
        </tr>
        }
    }
    </tbody>
    
</table>
