@model Quiz.Database.ViewModels.QuestionBanksVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/StaticFiles/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
    <li class="breadcrumb-item"><a href="">Category</a></li>
</ol>
<div class="">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <h2>Manage Categories</h2>
                </div>
                <div class="col-sm-8">
                    <a class="btn btn-primary" asp-action="Create" asp-controller="QuestionBank"><i
                            class="bi bi-plus-circle"></i> Add new</a>
                    <a class="btn btn-secondary"><i class="bi bi-filetype-csv"></i><span>Export to CSV</span></a>
                </div>
            </div>
        </div>
        <div class="table-filter">
            <div class="row">
                <div class="col-sm-3">
                    <div class="show-entries">
                        <span>Show</span>
                        <select class="form-control">
                            <option>5</option>
                            <option>10</option>
                            <option>15</option>
                            <option>20</option>
                        </select>
                        <span>entries</span>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="filter-group">
                        <input type="text" class="form-control px-0 py-1" placeholder="Search">
                        <button type="button" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Date Create</th>
                    <th scope="col" class="table-hover-text-center">Action</th>
                </tr>
            </thead>
            <tbody>
            @{
                string ContentLimitLength(string a)
                {
                    return (a.Length >= 50) ? (a.Substring(0, 49) + "...") : a;
                }
                int i = 0;
                @foreach (var item in Model.questionbanks)
                {
                    <tr class="tr-line-height">
                        <td style="text-align:left">@(++i)</td>
                        <td style="text-align:left">@ContentLimitLength(@item.Name)</td>
                        <td>@string.Format("{0:MM/dd/yyyy}", item.CreateDate)</td>
                        <td>
                            <form asp-action="Delete" asp-controller="QuestionBank" asp-route-id="@item.Id"
                            class="row row-cols-lg-auto g-3 align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-controller="QuestionBank" asp-route-id="@item.Id"
                                    class="btn btn-sm btn-secondary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                
                                    <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure to delete this record?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text col-md-3">Showing <b>5</b> out of <b>25</b> entries</div>
            <div class="col-md-9 d-flex flex-row-reverse">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">&laquo;</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
