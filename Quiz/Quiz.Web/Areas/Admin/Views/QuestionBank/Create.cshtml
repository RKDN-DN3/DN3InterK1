@model Quiz.Database.ViewModels.QuestionBanksVM

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Create Category</h5>
            </div>
            <div class="card-body mx-3">
                <form asp-action="Create" asp-controller="QuestionBank" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="questionbank.IsDelete" value="0" class="form-control"/>

                    <div class="form-group">
                        <label asp-for="questionbank.Name" class="form-label control-label" style="padding-bottom:10px">Name of Question Bank</label>
                        <input asp-for="questionbank.Name" class="form-control pt-0" placeholder="Name of Question Bank"/>
                        <span asp-validation-for="questionbank.Name" class="text-danger"></span>
                    </div>
  
                    <br />
                    <div class="row">
                        <div class="text-center">
                            <a asp-action="Index" asp-controller="QuestionBank" class="btn btn-primary">Back</a>
                            <input type="submit" value="Save" class="btn btn-secondary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
