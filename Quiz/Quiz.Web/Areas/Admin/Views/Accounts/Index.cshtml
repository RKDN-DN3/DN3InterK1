@model Quiz.Database.ViewModels.AccountsVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/StaticFiles/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
    <li class="breadcrumb-item"><a href="">Account</a></li>
</ol>
<div class="">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <h2>Manage Accounts</h2>
                </div>
                <div class="col-sm-8">
                    <a class="btn btn-primary" asp-action="Create" asp-controller="Accounts"><i
                            class="bi bi-plus-circle"></i> Add new</a>
                    <a class="btn btn-secondary"><i class="bi bi-filetype-csv"></i><span>Export to CSV</span></a>
                </div>
            </div>
        </div>
        <div class="table-filter">
            <div class="row">
                <div class="col-sm-3">
                    <div class="show-entries">
                        <span>Show</span>
                        <select class="form-control">
                            <option>5</option>
                            <option>10</option>
                            <option>15</option>
                            <option>20</option>
                        </select>
                        <span>entries</span>
                    </div>
                </div>
                <div class="col-sm-9">

                    <div class="filter-group">
                        <input type="text" class="form-control px-0 py-1" placeholder="Search">
                        <button type="button" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></button>
                    </div>
                    <div class="filter-group">
                        <label>Category</label>
                        <select class="form-control">
                            <option>Any</option>
                            <option>Delivered</option>
                            <option>Shipped</option>
                            <option>Pending</option>
                            <option>Cancelled</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label>Authority</label>
                        <select class="form-control">
                            <option>All</option>
                            <option class="select_option_fromDB" value="0">Admin</option>
                            <option class="select_option_fromDB" value="1">User</option>
                        </select>
                    </div>
                    <span class="filter-icon"><i class="bi bi-funnel"></i></span>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr class="table-hover-text-center">
                    <th scope="col" style="text-align:left">No.</th>
                    <th scope="col" style="text-align:left">Email User</th>
                    <th scope="col">Password</th>
                    <th scope="col">Authority</th>
                    <th scope="col">Name</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Date Create</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
             @{
                string Authority(String a)
                {
                    return (a == "0") ? "Admin" : ((a == "1") ? "User" : "");
                }
                int i = 0;
            
                @foreach (var item in Model.accounts) 
                { 
                    i++;
                    <tr  class="text-center">
                        <td style="text-align:left">@i</td>
                        <td style="text-align:left">@item.Email_User</td>
                        <td><input type="password" class="form-control-view-pass" placeholder="Password" value="@item.Password" readonly style="border: none;"/></td>
                        
                        <td>@Authority(item.Authority)</td>
                        <td>@item.Name</td>
                        <td>@item.DOB</td>
                        <td>@item.PhoneNumber</td>
                        <td>@string.Format("{0:MM/dd/yyyy}", item.CreateDate)</td>

                        <td>
                            <form asp-action="Delete" asp-controller="Accounts" asp-route-id="@item.Email_User"
                            class="row row-cols-lg-auto g-3 align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-controller="Accounts" asp-route-id="@item.Email_User"
                                    class="btn btn-sm btn-secondary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure to delete this record?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text col-md-3">Showing <b>5</b> out of <b>25</b> entries</div>
            <div class="col-md-9 d-flex flex-row-reverse">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">&laquo;</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

