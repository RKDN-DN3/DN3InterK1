@model Quiz.Database.ViewModels.QuestionsVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/StaticFiles/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="">Home</a></li>
  <li class="breadcrumb-item"><a href="#">Question</a></li>
</ol>
<div class="">
    <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-4">
                        <h2>Manage Questions</h2>
                    </div>
                    <div class="col-sm-8">
                        <a class="btn btn-primary" asp-action="Create" asp-controller="Question"><i class="bi bi-plus-circle"></i> Add new</a>
                        <a class="btn btn-secondary"><i class="bi bi-filetype-csv"></i><span>Export to CSV</span></a>
                    </div>
                </div>
            </div>
            <div class="table-filter">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="show-entries">
                            <span>Show</span>
                            <select class="form-control">
                                <option>5</option>
                                <option>10</option>
                                <option>15</option>
                                <option>20</option>
                            </select>
                            <span>entries</span>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        
                        <div class="filter-group">
                            <input type="text" class="form-control px-0 py-1" placeholder="Search">
                            <button type="button" class="btn btn-sm btn-primary"><i class="bi bi-search"></i></button>
                        </div>
                        <div class="filter-group">
                            <label>Category</label>
                            <select class="form-control">
                                <option>Any</option>
                                <option>Delivered</option>
                                <option>Shipped</option>
                                <option>Pending</option>
                                <option>Cancelled</option>
                            </select>
                        </div>
                        <div class="filter-group">
                            <label>Level</label>
                            <select class="form-control">
                                <option>All</option>
                                <option class="select_option_fromDB" value="0">Easy</option>
                                <option class="select_option_fromDB" value="1">Normal</option>
                                <option class="select_option_fromDB" value="1">Difficult</option>
                            </select>
                        </div>
                        <span class="filter-icon"><i class="bi bi-funnel"></i></span>
                    </div>
                </div>
            </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Content</th>
                    <th scope="col"></th>
                    <th scope="col">Category</th>
                    <th scope="col">Level</th>
                    <th scope="col">Type</th>
                    <th scope="col">Explaint</th>
                    <th scope="col">Date Create</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            @{
                string Level(String a)
                {
                    return (a == "0") ? "Easy" : ((a == "1") ? "Normal" : "Difficult");
                }
                string ContentLimitLength(string a)
                {
                    return (a.Length >= 50) ? (a.Substring(0,49)+"...") : a;
                }
                int i = 0;
                @foreach (var item in Model.questions) {
                <tr>
                    <td>@(++i)</td>
                    <td>@ContentLimitLength(@item.Content)</td>
                    <td>
                        <img src="@Url.Content("~/Images/" + @item.ImageUrl)" height="40" width="40"
                                 asp-append-version="true">
                    </td>
                    <td>@item.Question_Bank.Name</td>
                    <td>@Level(item.Level)</td>
                    <td>@item.Type</td>
                    <td>@item.Explaint</td>
                    <td>@string.Format("{0:MM/dd/yyyy}", item.CreateDate)</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Question" asp-route-id="@item.Id" class="row row-cols-lg-auto g-3 align-items-center">
                            <div class="btn-group">
                            <a asp-action="Detail" asp-controller="Question" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-controller="Question" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure to delete this record?')">
                                <i class="bi bi-trash"></i>
                            </button>
                            </div>
                        
                        </form>
                    </td>
                </tr>
                }
            }
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text col-md-3">Showing <b>5</b> out of <b>25</b> entries</div>
            <div class="col-md-9 d-flex flex-row-reverse">
              <ul class="pagination">
                <li class="page-item disabled">
                  <a class="page-link" href="#">&laquo;</a>
                </li>
                <li class="page-item active">
                  <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">4</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">5</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">&raquo;</a>
                </li>
              </ul>
            </div>
        </div>
    </div>
</div>


