@model Quiz.Database.ViewModels.QuestionsVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/StaticFiles/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}


<a class="btn btn-link" asp-action="Create" asp-controller="Question"><i class="bi bi-plus-square"></i>Create new question</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Content</th>
            <th scope="col">Question Bank</th>
            <th scope="col">Level</th>
            <th scope="col">Image</th>
            <th scope="col">Type</th>
            <th scope="col">Explaint</th>
            <th scope="col">Date Create</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @{
            string Level(String a)
            {
                return (a == "0") ? "Easy" : ((a == "1") ? "Normal" : "Difficult");
            }
            string ContentLimitLength(string a)
            {
                return (a.Length >= 50) ? (a.Substring(0,49)+"...") : a;
            }
            int i = 0;
        @foreach (var item in Model.questions) {
        <tr style="">
            <td>@(++i)</td>
            <td>@ContentLimitLength(@item.Content)</td>
            <td>@item.Question_Bank.Name</td>
            <td>@Level(item.Level)</td>
            <td><img src="@item.ImageUrl" title="filename" width="40" height="40"/> </td>
            <td>@item.Type</td>
            <td>@item.Explaint</td>
            <td>@item.CreateDate</td>
            <td>
                <form asp-action="Delete" asp-controller="Question" asp-route-id="@item.Id">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-controller="Question" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure to delete this record?')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </form>
            </td>
        </tr>
        }
    }
    </tbody>
    
</table>
